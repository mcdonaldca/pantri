#index {
  .auth-button {
    display: block;
    box-sizing: border-box;
    height: 220px;
    width: 220px;

    margin: 130px auto 0;
    padding-top: 100px;
    border-radius: 50%;

    background-color: #EB6044;
    text-align: center;
    color: white;
    font: 17px Nunito;
    font-weight: 300;
  }

  .circle {
    position: absolute;
    top: 110px;
    margin-left: 167.5px;
  }

  @keyframes outer-corn {
    from { transform:rotate(0deg); }
    to { transform:rotate(360deg); }
  }

  @keyframes outer-bread {
    from { transform:rotate(20deg); }
    to { transform:rotate(380deg); }
  }

  @keyframes outer-grape {
    from { transform:rotate(40deg); }
    to { transform:rotate(400deg); }
  }

  @keyframes outer-cheese {
    from { transform:rotate(60deg); }
    to { transform:rotate(420deg); }
  }

  @keyframes outer-apple {
    from { transform:rotate(80deg); }
    to { transform:rotate(440deg); }
  }

  @keyframes outer-chicken {
    from { transform:rotate(100deg); }
    to { transform:rotate(460deg); }
  }

  @keyframes outer-fish {
    from { transform:rotate(120deg); }
    to { transform:rotate(480deg); }
  }

  @keyframes outer-pineapple {
    from { transform:rotate(140deg); }
    to { transform:rotate(500deg); }
  }

  @keyframes outer-sweet-potato {
    from { transform:rotate(160deg); }
    to { transform:rotate(520deg); }
  }

  @keyframes outer-banana {
    from { transform:rotate(180deg); }
    to { transform:rotate(540deg); }
  }

  @keyframes outer-meat {
    from { transform:rotate(200deg); }
    to { transform:rotate(560deg); }
  }

  @keyframes outer-shrimp {
    from { transform:rotate(220deg); }
    to { transform:rotate(580deg); }
  }

  @keyframes outer-egg {
    from { transform:rotate(240deg); }
    to { transform:rotate(600deg); }
  }

  @keyframes outer-rice {
    from { transform:rotate(260deg); }
    to { transform:rotate(620deg); }
  }

  @keyframes outer-ice-cream {
    from { transform:rotate(280deg); }
    to { transform:rotate(640deg); }
  }

  @keyframes outer-pear {
    from { transform:rotate(300deg); }
    to { transform:rotate(660deg); }
  }

  @keyframes outer-eggplant {
    from { transform:rotate(320deg); }
    to { transform:rotate(680deg); }
  }

  @keyframes outer-cookie {
    from { transform:rotate(340deg); }
    to { transform:rotate(700deg); }
  }

  .icon {
    position: absolute;
    top: 0;
    width: 40px;
    height: 40px;
    transform-origin: 50% 180px;
  }

  .icon.corn {
    animation: outer-corn 15s linear infinite;
  }

  .icon.bread {
    animation: outer-bread 15s linear infinite;
  }

  .icon.grape {
    animation: outer-grape 15s linear infinite;
  }

  .icon.cheese {
    animation: outer-cheese 15s linear infinite;
  }

  .icon.apple {
    animation: outer-apple 15s linear infinite;
  }

  .icon.chicken {
    animation: outer-chicken 15s linear infinite;
  }

  .icon.fish {
    animation: outer-fish 15s linear infinite;
  }

  .icon.pineapple {
    animation: outer-pineapple 15s linear infinite;
  }

  .icon.sweet-potato {
    animation: outer-sweet-potato 15s linear infinite;
  }

  .icon.banana {
    animation: outer-banana 15s linear infinite;
  }

  .icon.meat {
    animation: outer-meat 15s linear infinite;
  }

  .icon.shrimp {
    animation: outer-shrimp 15s linear infinite;
  }

  .icon.egg {
    animation: outer-egg 15s linear infinite;
  }

  .icon.rice {
    animation: outer-rice 15s linear infinite;
  }

  .icon.ice-cream {
    animation: outer-ice-cream 15s linear infinite;
  }

  .icon.pear {
    animation: outer-pear 15s linear infinite;
  }

  .icon.eggplant {
    animation: outer-eggplant 15s linear infinite;
  }

  .icon.cookie {
    animation: outer-cookie 15s linear infinite;
  }

  img {
    width: 40px;
    height: 40px;
  }
}

#pantry {
  padding-top: 20px;
  .stripe {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 0;
    width: 25px;
    background-color: #E2D6B7;
    height: 100%;

    &.right {
      left: auto;
      right: 0;
    }
  }

  .shelf {
    position: relative;
    background-image: url(<%= asset_path( 'shelf.svg' ) %>);
    background-size: 375px 66px;
    background-repeat: no-repeat;
    background-position: center bottom;
    z-index: 1;
    padding-top: 120px;

    .food {
      z-index: 1;
      position: absolute;
      left: 0;
      bottom: 20px;

      &.right {
        left: auto;
        right: 0;
      }
    }

    .dots {
      position: absolute;
      bottom: 0;
      width: 375px;
      height: 20px;
    }
  }
}